<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="span8">
			<h3>The Statty Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<div class="center hero-unit">
		<h1>Welcome to Statty</h1>
		<h2>Your Social Source for Sports News.</h2>

		<%= link_to "Join Statty", signup_path, class: "btn btn-large btn-primary" %>
	</div>
<% end %>